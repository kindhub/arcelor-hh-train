mixin icon-card(icon, title)
	.icon-card 
		.icon-card__icon-container 
			+icon(icon, 'icon-card__icon')
		.icon-card__title!=title

mixin titled-image-box(imageSrc, title, isReverse=false)
	mixin content
		.titled-image-box__content
			.title.title--mb-short!=title
			.titled-image-box__text
				block

	mixin image(src)
		.titled-image-box__image-wrapper
			img(src=imageSrc)

	.titled-image-box(class=(isReverse ? "titled-image-box--reverse" : ""))
		if isReverse
			+content
				block
			+image(imageSrc)
		else
			+image(imageSrc)
			+content
				block


		